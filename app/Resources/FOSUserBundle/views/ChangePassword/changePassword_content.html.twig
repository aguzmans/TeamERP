{% block contentTitle %}
    <div><h3>Change password</h3></div>
{% endblock %}
<form action="{{path('fos_user_change_password')}}" {{ form_enctype(form) }} method="POST" class='form-horizontal'>   
    {{ form_errors(form) }}
    <div class="form-group">
        <label class="col-lg-2 control-label">Current password:</label>
        <div class="col-sm-10">
            {{ form_widget(form.current_password, {'attr': {'class': 'form-control list-unstyled', 'placeholder' : 'Curent password'}}) }}
        </div>
    </div>   
    <div class="form-group">
        <label class="col-lg-2 control-label">New password:</label>
        <div class="col-sm-10">
            {{ form_widget(form.new.first, {'attr': {'class': 'form-control list-unstyled', 'placeholder' : 'New password'}}) }}
        </div>
    </div> 
    <div class="form-group">
        <label class="col-lg-2 control-label">Repeat password:</label>
        <div class="col-sm-10">       
            {{ form_widget(form.new.second, {'attr': {'class': 'form-control list-unstyled', 'placeholder' : 'Repeat new password'}}) }}
        </div>
    </div>
  <div class="form-group">        
    <div class="col-sm-offset-2 col-sm-10">
        <input class="btn btn-primary" type="submit" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
        <input class="btn btn-default" type="reset" value="Cancel" />
    </div>
  </div>
        {{ form_rest(form) }}
</form>
