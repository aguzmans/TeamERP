    <input type="hidden" id="fos_user_registration_form__token" name="fos_user_registration_form[_token]" value="{{csrf_token('registration')}}">
    {{ form_errors(form) }}
    <div class="form-group">
        <label class="col-lg-2 control-label">Username:</label>
        <div class="col-sm-10">
            {{ form_widget(form.username, {'attr': {'class': 'form-control list-unstyled', 'placeholder': 'Enter username', 'required': 'required'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-2 control-label">E-mail:</label>
        <div class="col-sm-10">
                    <div class="input-group">
                        <div class="input-group-addon">@</div>{{ form_widget(form.email, {'attr': {'class': 'form-control list-unstyled', 'placeholder': 'Enter e-mail', 'required': 'required'}}) }}
                    </div>
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-2 control-label">Password:</label>
        <div class="col-sm-10">
            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control list-unstyled', 'placeholder': 'Enter password', 'required': 'required'}}) }}
        </div>
    </div>   
    <div class="form-group">
        <label class="col-lg-2 control-label">Verify password:</label>
        <div class="col-sm-10">
            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control list-unstyled', 'placeholder': 'Rewrite password', 'required': 'required'}}) }}
        </div>
    </div>
    <div class="form-group">
        <label class="col-lg-2 control-label">Organization Name:</label>
        <div class="col-sm-10">
            {{ form_widget(form.OrganizationName, {'attr': {'class': 'form-control list-unstyled', 'placeholder': 'Enter Company or Organization name', 'required': 'required'}}) }}        
        </div>
    </div>  
    <div class="form-group">
        <label class="col-lg-2 control-label">Full Name:</label>
        <div class="col-sm-10">
            {{ form_widget(form.name, {'attr': {'class': 'form-control list-unstyled', 'placeholder': 'Administrator full name'}}) }}        
        </div>
    </div>  
{% if app.user is not null and is_granted('ROLE_COMPANY_ADMIN') %}        
    <div class="form-group">
        <label class="col-lg-2 control-label">Roles:</label>
        <div class="col-sm-10">
            {{ form_widget(form.roles, {'attr': {'class': 'form-control list-unstyled', 'placeholder': 'Administrator full name'}}) }}        
        </div>
    </div>    
{% endif %}        

