<div class="form-group">
    {{ form_label(form.name, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder' : 'e.g. meter(s)'}}) }}
    </div>
</div>
<div class="form-group">
    {{ form_label(form.abreviation, null, {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.abreviation, {'attr': {'class': 'form-control', 'placeholder' : 'e.g. m or Kg'}}) }}
    </div>
</div>
