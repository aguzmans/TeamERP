{% if result[0].name is defined %}
<div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Actions</th>
                <th>Measure Unit Name</th>
                <th>Abreviation</th>
            </tr>
        </thead>
        <tbody>
        {% for key,measure_unit in result %}
            <tr>
                <td>
                    <a class="warning" 
                           href="{{path('team_erp_stores_edit_measure_unit', {'id' : measure_unit.id })}}" 
                           onclick="return confirm('Are you sure you want to delete '+{{measure_unit.name}});">
                            <i class="fa fa-pencil-square-o"></i>
                    </a> | 
                    <a class="danger" href="{{path('team_erp_stores_remove_measure_unit', {'id' : measure_unit.id })}}">
                        <i class="fa fa-trash-o"></i> 
                    </a>
                </td>
                <td>{{measure_unit.name}}</td>
                <td>{{measure_unit.abreviation}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endif %}