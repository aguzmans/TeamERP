{% extends "TeamERPStoresBundle::layout.html.twig"%}
{% block content %}
    <div class="form-header"><h1>New product</h1></div>     
    <div class="form">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        {{ form_errors(form) }}
            {% include 'TeamERPStoresBundle:Product:product_form.html.twig' %}
            {% include 'TeamERPStoresBundle::action_save_controls.html.twig' %}
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('bundles/teamerpstores/js/functions.js') }}"></script>
    <script src="{{ asset('bundles/teamerpstores/js/ajax.js') }}"></script>
{% endblock %}