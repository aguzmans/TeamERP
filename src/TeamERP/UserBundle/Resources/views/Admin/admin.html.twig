{% extends "TeamERPUserBundle::layout.html.twig" %}
{% block content %}
    <table class="table table-striped">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Username</th>
            <th>Roles</th>
        </tr>
    </thead>
    <tbody>
        
        {% for user in users %}
            <tr>
                <td><a class="warning" href="{{path('team_erp_customer_edit', {'id' : user.id })}}">
                        <i class="fa fa-pencil-square-o"></i></a> | 
                    <a class="danger" href="{{path('team_erp_customer_delete', {'id' : user.id })}}">
                        <i class="fa fa-trash-o"></i> </a>
                </td>
                <td>{{user.username}}</td>
                <td>{% set efectiveRoles = user.roles %}
                    {% for efrole in efectiveRoles %}
                            {{efrole}},
                    {% endfor %}</td>
            </tr> 
        {% endfor %}
    </tbody>

{% endblock %}

